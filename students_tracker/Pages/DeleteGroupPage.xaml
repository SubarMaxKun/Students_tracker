<Page x:Class="students_tracker.Pages.DeleteGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:students_tracker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteGroup">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Назва групи" FontSize="20"/>
                <ComboBox x:Name="GroupComboBox" Width="200" FontSize="20" Margin="10"/>
            </StackPanel>
            <Button x:Name="DeleteGroupButton"
                    Content="Видалити"
                    Width="100"
                    Height="50"
                    Margin="10"
                    Click="DeleteGroupButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
