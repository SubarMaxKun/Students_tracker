<Page x:Class="students_tracker.Pages.CreateGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:students_tracker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateGroup">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Назва Групи"
                       FontSize="20"/>
                <TextBox x:Name="GroupNameTextBox"
                         Width="200"
                         Height="30"
                         Margin="10"
                         MaxLength="10"/>
            </StackPanel>
            
            <Button x:Name="CreateGroupButton" 
                    Content="Створити групу" 
                    Width="100"
                    Height="50"
                    Margin="10"
                    Click="CreateGroupButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
